  "main": "index.js",
  "scripts": {
    "start": "node -r dotenv/config dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "up": "npm run build && docker-compose up",
    "debug": "nodemon -r dotenv/config -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "down": "docker-compose down",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:verbose": "jest -c jest-integration-config.js",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:e2e": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "lint": "eslint . --fix"
  },
